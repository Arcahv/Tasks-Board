<!-- res/layout/board_item.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/boardCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/board_created_at"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/boardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/board_description"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/boardDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/board_due_date"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/boardPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/board_priority"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/boardUpdatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/board_updated_at"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/boardStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/board_status"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>